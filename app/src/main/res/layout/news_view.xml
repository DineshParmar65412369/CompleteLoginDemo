<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="50dp">

    <TextView
            android:id="@+id/txt_news"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_path"
            app:layout_constraintHorizontal_weight="0.40"
            android:text="@string/market_news"
            android:padding="4dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rssWeb"
            app:layout_constraintLeft_toLeftOf="parent"/>


    <WebView
            android:id="@+id/rssWeb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintHorizontal_weight="1"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_news"/>

</androidx.constraintlayout.widget.ConstraintLayout>